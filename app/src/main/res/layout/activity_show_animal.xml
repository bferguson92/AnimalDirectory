<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ShowAnimal">

    <TextView
        android:id="@+id/tvAnimalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvAnimalCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalName"/>

    <TextView
        android:id="@+id/tvAnimalHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalCategory"/>

    <TextView
        android:id="@+id/tvAnimalWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalHeight"/>

    <Button
        android:id="@+id/btnPlaySound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_sound"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalWeight" />

</androidx.constraintlayout.widget.ConstraintLayout>